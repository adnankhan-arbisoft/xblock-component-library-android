<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mcq_item_list_margin_horizontal"
    android:layout_marginRight="@dimen/mcq_item_list_margin_horizontal"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/material_elevation"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:id="@+id/option_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center"
        android:minHeight="@dimen/mcq_item_list_min_height"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mcq_item_list_padding_horizontal"
        android:paddingRight="@dimen/mcq_item_list_padding_horizontal">

        <CheckBox
            android:id="@+id/option_checkbox"
            android:layout_width="@dimen/mcq_item_list_checkbox_width_height"
            android:layout_height="@dimen/mcq_item_list_checkbox_width_height"
            android:button="@drawable/selector_mcq_options"
            tools:checked="true"/>

        <TextView
            android:id="@+id/option_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mcq_item_list_padding_horizontal"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.3"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"
            tools:text="The team demonstrated the strong divergent thinking the problem called for and required."/>
    </LinearLayout>
</android.support.v7.widget.CardView>