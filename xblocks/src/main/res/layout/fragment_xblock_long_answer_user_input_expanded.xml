<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- drag indicator -->
    <ImageView
        android:id="@+id/overlay_collapse_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_collapse_overlay"/>
    <!-- User answer input field -->
    <EditText
        android:id="@+id/view_user_answer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@android:color/white"
        android:gravity="top|left"/>
    <!-- Collapse button -->
    <ImageView
        android:id="@+id/btn_collapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_ic_collapse_expand"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_field_collapse"/>
    <!-- Done Button -->
    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_long_answer_user_input_done_button"
        android:text="Done"
        android:textColor="@android:color/white"/>
</FrameLayout>