<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:background="#F7F7F7">

    <TextView
        android:id="@+id/question_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xblockColorPrimary"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="@dimen/mcq_question_padding_vertical"
        android:paddingLeft="@dimen/mcq_question_padding_horizontal"
        android:paddingRight="@dimen/mcq_question_padding_horizontal"
        android:paddingTop="@dimen/mcq_question_padding_vertical"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="18sp"
        tools:background="@color/xblockColorPrimary"
        tools:text="While many of the tools and techniques discussed in this lesson might be useful, which of the below?"/>

    <TextView
        android:id="@+id/feedback_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingBottom="@dimen/mcq_question_padding_vertical"
        android:paddingLeft="@dimen/mcq_question_padding_horizontal"
        android:paddingRight="@dimen/mcq_question_padding_horizontal"
        android:paddingTop="@dimen/mcq_question_padding_vertical"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="An “!” shows that you were not right, either incorrectly selecting the item or incorrectly excluding it."
        tools:visibility="visible"/>

    <View
        android:id="@+id/feedback_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/mcq_feedback_divider_margin_horizontal"
        android:layout_marginRight="@dimen/mcq_feedback_divider_margin_horizontal"
        android:layout_marginTop="@dimen/mcq_feedback_divider_margin_vertical"
        android:background="@color/mcqFeedbackDivider"
        android:visibility="gone"
        tools:visibility="visible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/options_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/mcq_feedback_divider_margin_vertical"
        android:layout_weight="1"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback_divider"/>
</LinearLayout>